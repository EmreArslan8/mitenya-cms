{
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Full product schema matching ShopProductData"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "name" },
    "brand": { "type": "string" },
    "brandId": { "type": "string" },
    "category": { "type": "string" },
    "url": { "type": "string" },
    "imgSrc": { "type": "string" },
    "note": { "type": "string" },
    "sizeRecommendation": { "type": "string" },
    "src": { "type": "string" },

    "quantity": { "type": "integer" },

    "description": { "type": "richtext" },
    "sizeGuide": { "type": "richtext" },

    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },

    "price": {
      "type": "component",
      "repeatable": false,
      "component": "product.price"
    },

    "rating": {
      "type": "component",
      "repeatable": false,
      "component": "product.rating"
    },

    "variants": {
      "type": "component",
      "repeatable": true,
      "component": "product.variant"
    },

    "attributes": {
      "type": "component",
      "repeatable": true,
      "component": "product.attribute"
    },

    "reviews": {
      "type": "component",
      "repeatable": true,
      "component": "product.review"
    },

    "breadcrumbs": {
      "type": "component",
      "repeatable": true,
      "component": "product.breadcrumb"
    }
  }
}
